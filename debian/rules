#!/usr/bin/make -f
# -*- makefile -*-

export PYBUILD_NAME=confight
DESTDIR3:=debian/python3-confight

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_installman:
	cat docs/man-header.md README.md | \
	  pandoc --standalone -f markdown -t man > docs/confight3.1
	dh_installman --package python3-confight docs/confight3.1

override_dh_compress:
	dh_compress --exclude=README.md

override_dh_auto_install:
	dh_auto_install
	cd $(DESTDIR3)/usr/bin && mv confight confight3

override_dh_auto_test:
	# Pybuild intentionally sets proxy variables to http://127.0.0.1:9/ to block
	# network access during builds. We need to let tox run without these proxies
	# because not all dependencies are available as system packages in all Ubuntu
	# versions.
	http_proxy= https_proxy= HTTP_PROXY= HTTPS_PROXY= dh_auto_test

override_dh_clean:
	rm -f docs/confight.1
	dh_clean
